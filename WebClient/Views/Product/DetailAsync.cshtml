@model WebClient.Models.ProductModel
<div class="container">
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail anim">
            <img src="@Model.Image" alt="..." class="img-responsive">
            <div class="caption">
                <h3>@Model.Name</h3>
                <p class="description">Brand - @Model.Brand</p>
                <p class="description">Year of anouncment - @Model.Year</p>
                <p class="description">Ram - @Model.RAM GB</p>
                <p class="description">Display - @Model.Display</p>
                <p class="description">Camera - @Model.Camera px</p>
                <p class="description">Battery - @Model.Battery mAh</p>
                <div class="clearfix">
                    <div class="price pull-left">@Model.Price AMD</div>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="pull-right">
        <div class="pull-right">
            <input type="text" data="@Model.Id" hidden id="prod_id" />
            <button class="btn btn-primary change-color add-to-cart">Add to Shopping Cart</button>
            <button class="btn btn-primary change-color product-details">Details</button>
        </div>
    </div>
</div>